
<!-- 【HTML】ソースコード -->

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <!-- Font Awesomeファイルの読み込み -->

    <!-- CSSファイルの読み込み -->
    <link rel="stylesheet" href="show.css" />
    <title>show</title>
  </head>

  <body>
    <%= flash[:notice] %>
    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    
  <p>
   <strong>Title:</strong>
   <%= @book.title %>
  </p>

  <p>
  <strong>Body:</strong>
   <%= @book.body %>
  </p>

  <%= link_to "Edit",edit_book_path %>
  <%= link_to 'Back',books_path %>

  

</body>
</html>