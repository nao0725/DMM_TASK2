<body>
  <h1>Editing Book</h1>


      <% if @book.errors.any? %>
          <%= @book.errors.count %>件のerrorが発生
        <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

    <%= form_with model:@book, local: true do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%=f.text_field :title %>
  </div>
  <div class="field">
    <h4>Body</h4>
    <%=f.text_area :body %>
  </div>
  <div class="actions">
    <%=f.submit 'Update Book' %>
  </div>


    <%= link_to "Show", book_path %>
    <%= link_to 'Back', books_path %>
  <% end %>

  </body>
